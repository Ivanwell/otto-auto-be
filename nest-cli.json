{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "monorepo": true,
  "compilerOptions": {
    "assets": [
      {
        "include": "../public/**/*",
        "outDir": "dist/public/"
      },
      {
        "include": "i18n/**/*",
        "outDir": "dist/src/"
      }
    ]
  },
  "projects": {
    "api": {
      "type": "application",
      "root": "src/apps/api-http",
      "entryFile": "main",
      "sourceRoot": "apps/api-http"
    }
  }
}
